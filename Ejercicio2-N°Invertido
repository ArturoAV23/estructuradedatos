#include "stdafx.h"
#include <conio.h>
#include <iostream>
using namespace std;
int main()
{
    int a,b=0,c=0;
    cout<<"Ingrese un numero"<<endl;
    cin>>a;
    while(a>0)
    {
        b=a%10;
        c=(b+c)*10;
        a=a/10;
    }
    cout<<"El numero invertido es"<<endl;
    cout<<c/10<<endl;
    getch();
    return 0;
}
